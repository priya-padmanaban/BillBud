<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.billbud.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="126dp"
        android:layout_height="94dp"
        android:text="Enter Names:"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="129dp"
        tools:layout_editor_absoluteY="42dp" />

    <EditText
        android:id="@+id/txtinput"
        android:layout_width="125dp"
        android:layout_height="50dp"
        android:layout_above="@+id/listView"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp"
        android:layout_toEndOf="@+id/Add"
        android:layout_toRightOf="@+id/Add"
        tools:layout_editor_absoluteX="130dp"
        tools:layout_editor_absoluteY="86dp" />

    <Button
        android:id="@+id/Add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtinput"
        android:layout_alignBottom="@+id/txtinput"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Add"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="88dp" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="368dp"
        android:layout_height="120dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="69dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="151dp" />

    <Button
        android:id="@+id/Done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtinput"
        android:layout_alignStart="@+id/txtinput"
        android:layout_below="@+id/listView"
        android:layout_marginTop="81dp"
        android:text="Done" />
</RelativeLayout>
